<div id="page-main" class="container d-flex justify-content-around">
  <div class="cocktail-info p-3 my-3">
    <div>
      <div id="cocktail-photo" style="background-image: url(<%= cl_image_path @cocktail.photo.key %>); background-size: cover; background-position: bottom;">
      </div>
      <h1 id="cocktail-name"><%= @cocktail.name %></h1>
    </div>

    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li id="cocktail-dose">
          <%= dose.description %> - <%= dose.ingredient.name %>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="dose-form p-3 my-3">
    <h1 id="form-title">Add a new ingredient:</h1>
    <%= simple_form_for [ @cocktail, @dose ] do |f| %>
      <%= f.input :description, placeholder: "Specify the quantity here" %>
      <%= f.association :ingredient %>
      <%= f.button :submit, class: "btn btn-primary" %>
      <%= f.button :button, "Cancel", type: "reset", class: "btn-danger" %>
    <% end %>
  </div>
</div>

